# CompITA Report Generator Environment Variables
PORT=8000
ASSETS_DIR=assets
REPORTS_DIR=reports
# Set to 'production' for production environment
ENVIRONMENT=production
# Set to 'true' to enable debug mode (not recommended in production)
DEBUG=false
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=*
# Set to 'true' to enable file persistence (requires storage plugin on Railway)
ENABLE_PERSISTENCE=true
